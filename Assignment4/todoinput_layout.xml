<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toDoInputView"
        android:layout_width="379dp"
        android:layout_height="182dp">

        <TextView
            android:id="@+id/titleMessage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="24dp"
            android:text="To Do List Title:" />

        <EditText
            android:id="@+id/titleChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/titleMessage2"
            android:layout_alignBottom="@+id/titleMessage2"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/titleMessage2"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/contentsMessage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleChange"
            android:layout_marginTop="51dp"
            android:layout_toStartOf="@+id/titleChange"
            android:text="Contents: " />

        <EditText
            android:id="@+id/contentsChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/contentsMessage2"
            android:layout_alignBottom="@+id/contentsMessage2"
            android:layout_alignStart="@+id/titleChange"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/contentsChange"
            android:layout_below="@+id/contentsChange"
            android:onClick="saveButtonHandler"
            android:text="Save" />
    </RelativeLayout>
</LinearLayout>
