<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="379dp"
        android:layout_height="182dp">

        <TextView
            android:id="@+id/titleMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="To Do List Title:"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp" />

        <EditText
            android:id="@+id/titleInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/titleMessage"
            android:layout_alignBottom="@+id/titleMessage"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/titleMessage"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/contentsMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="51dp"
            android:text="Contents: "
            android:layout_below="@+id/titleInput"
            android:layout_toStartOf="@+id/titleInput" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/contentsMessage"
            android:layout_alignBottom="@+id/contentsMessage"
            android:layout_alignStart="@+id/titleInput"
            android:ems="10"
            android:inputType="textPersonName" />
    </RelativeLayout>
</LinearLayout>
